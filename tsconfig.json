{
	"compilerOptions": {
		"target": "ES2022",
		"module": "ESNext",
		"lib": ["ES2022"],
		"declaration": true,
		"declarationMap": true,
		"outDir": "./dist",
		"strict": true,
		"skipLibCheck": true,
		"moduleResolution": "bundler",
		"allowSyntheticDefaultImports": true,
		"esModuleInterop": true
	},
	"include": ["src"],
	"exclude": ["node_modules", "dist", "**/*.test.ts"]
}
